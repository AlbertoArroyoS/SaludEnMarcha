<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AlimentacionHistorialActivity">

    <Button
        android:id="@+id/date_picker_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seleccionar fecha"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/breakfast_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Desayuno: "
        app:layout_constraintTop_toBottomOf="@id/date_picker_button"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/lunch_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Comida: "
        app:layout_constraintTop_toBottomOf="@id/breakfast_text"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/dinner_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cena: "
        app:layout_constraintTop_toBottomOf="@id/lunch_text"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>