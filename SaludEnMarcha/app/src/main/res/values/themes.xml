<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SaludEnMarcha.Light" parent="Theme.Material3.DayNight">
        <item name="android:fontFamily">@font/font_body</item>
    </style>

    <style name="MyButtonStyle" parent="Theme.Material3.DayNight">
        <item name="android:backgroundTint">@color/blue</item>
    </style>

    <style name="MyButtonStyleVolver" parent="Theme.Material3.DayNight">
        <item name="android:backgroundTint">@color/blue3</item>
    </style>

    <style name="CajaTexto" parent="Theme.Material3.DayNight">
        <item name="android:textColorHint">@color/grey</item>
    </style>

    <!-- Estilo personalizado para el día seleccionado -->
    <style name="CustomDaySelectedStyle" parent="Widget.MaterialComponents.MaterialCalendar.Day.Selected">
        <item name="android:textColor">#FFFFFF</item>
        <item name="itemFillColor">@color/blue</item> <!-- Color de fondo del día seleccionado -->
    </style>

    <!-- Estilo personalizado para el día actual -->
    <style name="CustomDayTodayStyle" parent="Widget.MaterialComponents.MaterialCalendar.Day.Today">
        <item name="android:textColor">#000000</item>
        <item name="itemFillColor">@color/blue</item> <!-- Color de fondo del día actual -->
    </style>



</resources>
